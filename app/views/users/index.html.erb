<% provide(:title, "Users") %><br>
<h4>Import from Excel file</h4>
<%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %><br>
  <%= submit_tag "Import", class: "btn btn-primary" %>
<% end %>
<br>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>email</th>
  </tr>
  </thead>

  <tbody>
    <% if @users.present? %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
